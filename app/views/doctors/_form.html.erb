<%= simple_form_for( [@care_circle, @doctor], html: {class: 'form-vertical' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name,:input_html => { :autocomplete => "off", :class => "doctor-autocomplete" }, :placeholder => "John Doe", :hint => "Autocomplete via <span style='color:#0087BD'>Wellmark CareFinder</span>" %>
    <%= f.input :address %>
    <%= f.input :city %>
    <%= f.input :state, collection: us_states %>
    <%= f.input :phone %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Add Doctor" %>
  </div>
<% end %>
