<%= simple_form_for( [@care_circle, @doctor], html: {class: 'form-vertical' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, :input_html => { :autocomplete => "off", :class => "doctor-autocomplete" } %>
    <%= f.input :phone %>
    <%= f.input :address %>
    <%= f.input :city %>
    <%= f.input :state, collection: us_states %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
