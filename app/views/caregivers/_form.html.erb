<%= simple_form_for(@caregiver) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email %>
    <%= f.input :name %>
    <%= f.input :city %>
    <%= f.input :state %>
    <%= f.input :zip %>
    <%= f.input :description %>
    <%= f.input :age %>
    <%= f.input :years_of_experience %>
    <%= f.input :occupation %>
    <%= f.input :insured %>
    <%= f.input :bonded %>
    <%= f.input :reviewed %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
