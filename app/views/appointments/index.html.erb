<h1>Listing appointments</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.title %></td>
        <td><%= appointment.date %></td>
        <td><%= link_to 'Show', [@care_circle,appointment] %></td>
        <td><%= link_to 'Edit', edit_care_circle_appointment_path(@care_circle, appointment) %></td>
        <td><%= link_to 'Destroy', [@care_circle, appointment], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Appointment', new_care_circle_appointment_path(@care_circle) %>
