 <!DOCTYPE html>
<html>
<head>
  <title>Wellmark Home</title>
  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
  <![endif]-->
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <!--[if lt IE 8]>
		<%= stylesheet_link_tag "font-awesome-ie7.min.css", media: "all" %>
	<![endif]-->
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body class="dashboard">

  <div class="container">
	
	  <div class="masthead">
	    <h3 class="main-logo"><%= link_to( care_circles_path, { :class => "" } ) do %>Wellmark <i class="icon-home"></i> HOME<% end %></h3>
      <div class="navbar main">
        <div class="navbar-inner">
          <div class="container">
            <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
			      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
			        <span class="icon-bar"></span>
			        <span class="icon-bar"></span>
			        <span class="icon-bar"></span>
			      </a>
            <div class="nav-collapse collapse">
              <ul class="nav">
              	<li class="<%= 'active' if is_dashboard? %>">
              	  <%= link_to care_circles_path  do %> <i class="icon-home icon-large"></i> Dashboard <% end %>
                </li>
                <li class="<%= 'active' if is_my_account? %>"><%= link_to edit_user_registration_path do %><i class="icon-user icon-large"></i> My Account<% end %></li>
                <li class="<%= 'active' if is_emergency? %>"><%= link_to care_circle_emergency_path(current_care_circle), 'data-no-turbolink' => true  do %><i class="icon-ambulance icon-large"></i> Emergency<% end %></li>
                <li class=""><a href="http://www.wellmark.com/HealthAndWellness/" class="" target="_blank"><i class="icon-stethoscope icon-large"></i> Wellness Portal</a></li>
                <li class="dropdown hidden-phone">
                  <a id="drop1" href="#" role="button" class="dropdown-toggle" data-toggle="dropdown">My Case Manager <b class="caret"></b></a>
                  <ul class="dropdown-menu" role="menu" aria-labelledby="drop1">
                    <li role="presentation"><a role="menuitem" tabindex="-1" href="#"><i class="icon-phone icon-large"></i>&nbsp; Call: 1-800-555-2345</a></li>
                    <li role="presentation"><a role="menuitem" tabindex="-1" href="#invite"><i class="icon-user-md icon-large"></i>&nbsp; Invite Case Manager</a></li>
                  </ul>
                </li>
              <!--
                <li class="hidden-phone">
                  <a id="call-case-manager-desktop" href="javascript:void(0);">
                    <span class="call"><i class="icon-phone icon-large"></i> Call Case Manager</span>
                    <span class="number "><i class="icon-phone icon-large"></i> 1-800-867-5309&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
                  </a>
                </li>
              -->
                <li class="visible-phone">
                  <a id="call-case-manager-mobile" href="tel:1-800-867-5309">
                    <span class="call"><i class="icon-phone icon-large"></i> Case Manager: 1-800-867-5309</span>
                  </a>
                </li>
              </ul>
            </div><!-- /.nav-collapse -->
          </div><!-- /.container -->
        </div><!-- /.navbar-inner -->
      </div><!-- /.navbar -->
    </div><!-- /.masthead -->

		</div><!-- /.container -->
	
<!--
	  <div id="user_nav">
	    <% if user_signed_in? %>
	    	<%= link_to "Care Circle", care_circles_path %>
	      Signed in as <%= current_user.profile.try(:name) %>.
	      <%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
	    <% else %>
	      <%= link_to 'Register', new_user_registration_path %> or <%= link_to 'Sign in', new_user_session_path %>
	    <% end %>
	  </div>
-->
	
	  

		<div class="container">
		
		  <div class="row-fluid">
		  
		    <div class="span2">
		      <!--Sidebar content-->
		      <div class="thumbnail hidden-phone">
		        <%= image_tag("/images/demo/mom-rect-1.jpg", :width => "175", :height => "200") %>
			    </div>

		      
		      <h5>Mom's Care Plan</h5>
		      <ul class="nav nav-pills nav-stacked">
            <li class="<%= 'active' if is_doctor_tab? %>"><%= link_to "Doctors", care_circle_doctors_path(current_care_circle) %></li>
            <li class="<%= 'active' if is_medications_tab? %>"><%= link_to "Medications", care_circle_medications_path(current_care_circle) %></li>
            <li class="<%= 'active' if is_notes_tab? %>"><%= link_to "Notes", care_circle_notes_path(current_care_circle) %></li>
            <li class="<%= 'active' if is_charts_tab? %>"><%= link_to "Charts", care_circle_charts_path(current_care_circle) %></li>
          </ul>
          
          <h5>Care Circle</h5>
		      <ul class="nav nav-pills nav-stacked">
            <li class="<%= 'active' if is_members_tab? %>"><a href="#">Members</a></li>
            <li class="<%= 'active' if is_new_members_tab? %>"><%= link_to "New Member", new_user_invitation_path %></li>
          </ul>
	      </div>
	      
		    <div class="span10">
		      <!--Body content-->
		      <% flash.each do |name, msg| %>
      		  <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
      		    <a class="close" data-dismiss="alert">x</a>
      		    <%= msg %>
      		  </div>
      		<% end %>
		      <%= yield %>
		    </div>
		    
		  </div><!-- /.row-fluid -->

    	<div class="row-fluid footer">
    	  <hr>
    	  <div class="copyright pull-left">&copy; Wellmark Home 2013</div>
    	  <div class="sign-out pull-right">Welcome <%= current_user.profile.try(:name) %>. <%= link_to("Sign out", destroy_user_session_path, :method => :delete)  %></div>
    	</div><!-- /.row-fluid -->

	</div><!-- /.container -->

</body>
</html>