<h2>Sign in</h2>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

  <%= f.input :email, :autofocus => true %>
	<%= f.input :password %>

  <% if devise_mapping.rememberable? -%>
    <%= f.input :remember_me, :as => :boolean, :label => false, :inline_label => true %>
  <% end -%>
  
  <div class="form-actions">
    <%= f.submit "Sign in", { :class => "btn" } %>&nbsp;&nbsp;|&nbsp;&nbsp;<%= link_to "Forgot your password?", new_password_path(resource_name) %>&nbsp;&nbsp;|&nbsp;&nbsp;<%= link_to "Don't have an account?", new_registration_path(resource_name) %>
  </div>
<% end %>
